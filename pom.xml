<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>ru.sokomishalov.commons</groupId>
    <artifactId>commons-parent</artifactId>
    <version>1.1.8</version>
    <packaging>pom</packaging>

    <properties>
        <java.version>1.8</java.version>
        <kotlin.version>1.3.61</kotlin.version>
        <kotlinx.version>1.3.3</kotlinx.version>
        <jackson.version>2.10.1</jackson.version>
        <reactor.version>3.3.2.RELEASE</reactor.version>
        <reactor-netty.version>0.9.2.RELEASE</reactor-netty.version>
        <slf4j.version>1.7.30</slf4j.version>
        <logback.version>1.2.3</logback.version>
        <spring.boot.version>2.2.2.RELEASE</spring.boot.version>
        <spring.version>5.2.2.RELEASE</spring.version>
        <lettuce.version>5.2.1.RELEASE</lettuce.version>
        <aspectj.version>1.9.5</aspectj.version>
        <caffeine.cache>2.8.0</caffeine.cache>
        <springfox.version>2.9.2</springfox.version>
        <mongo-reactive.version>1.13.0</mongo-reactive.version>
        <test-containers.version>1.12.4</test-containers.version>
    </properties>

    <modules>
        <module>commons-core</module>
        <module>commons-logging</module>
        <module>commons-serialization</module>
        <module>commons-reactor</module>
        <module>commons-coroutines</module>
        <module>commons-distributed-locks</module>
        <module>commons-cache</module>
        <module>commons-spring</module>
    </modules>

    <repositories>
        <repository>
            <id>jitpack.io</id>
            <url>https://jitpack.io</url>
        </repository>
    </repositories>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <!-- mvn license:format -->
                    <groupId>com.mycila</groupId>
                    <artifactId>license-maven-plugin</artifactId>
                    <version>3.0</version>
                    <configuration>
                        <header>header.txt</header>
                        <excludes>
                            <exclude>LICENSE.md</exclude>
                            <exclude>*.xml</exclude>
                            <exclude>*.properties</exclude>
                            <exclude>*.yml</exclude>
                        </excludes>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>